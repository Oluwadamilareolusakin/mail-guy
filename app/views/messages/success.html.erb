<div class="page-holder row">
  <div class="left">
  </div>
  <div class="column right" style="background-image: url(<%= image_url('success.svg')%>)">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <div class="message-holder column">
      <h1>It's on the way!</h1>
      <%= link_to 'Send another', root_path, class: 'action-btn new-btn' %> 
      <%= link_to  "View Message", view_message_path(message: {sender: @sender}), class: 'action-btn view-btn' %>
    </div>
  </div>

</div>
